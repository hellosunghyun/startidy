{
  "name": "stardust-cli",
  "version": "1.0.0",
  "description": "AI-powered CLI tool to automatically organize your GitHub Stars into Lists",
  "type": "module",
  "bin": {
    "stardust": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm",
    "start": "bun run src/index.ts",
    "dev": "bun run src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "github",
    "stars",
    "lists",
    "organize",
    "ai",
    "gemini",
    "cli",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hellosunghyun/stardust-cli.git"
  },
  "bugs": {
    "url": "https://github.com/hellosunghyun/stardust-cli/issues"
  },
  "homepage": "https://github.com/hellosunghyun/stardust-cli#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@google/genai": "^0.14.0",
    "@inquirer/prompts": "^7.0.0",
    "commander": "^12.1.0",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "typescript": "^5.6.0"
  }
}
