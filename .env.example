# ============================================
# 필수 설정 (Required)
# ============================================

# GitHub Personal Access Token (필수)
# 권한: repo, read:user
# 발급: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx

# GitHub 사용자명 (필수)
GITHUB_USERNAME=your-username

# Google Gemini API Key (필수)
# 발급: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=AIzaxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# 카테고리 설정 (Category Settings)
# ============================================

# 최대 카테고리 수 (기본: 32, GitHub Lists 제한)
# MAX_CATEGORIES=32

# 저장소당 최대 카테고리 수 (기본: 3)
# MAX_CATEGORIES_PER_REPO=3

# 저장소당 최소 카테고리 수 (기본: 1)
# MIN_CATEGORIES_PER_REPO=1

# ============================================
# 배치 처리 설정 (Batch Processing)
# ============================================

# Gemini 분류 배치 크기 - 한 번에 분류할 저장소 수 (기본: 20)
# CLASSIFY_BATCH_SIZE=20

# README 조회 동시 요청 수 (기본: 20)
# README_BATCH_SIZE=20

# List 생성 간 딜레이 (ms) (기본: 500)
# LIST_CREATE_DELAY=500

# 배치 간 딜레이 (ms) (기본: 2000)
# BATCH_DELAY=2000

# ============================================
# Rate Limiting 설정
# ============================================

# Gemini API 분당 요청 제한 (기본: 15, Free tier 기준)
# Pro tier 사용 시 360으로 변경 가능
# GEMINI_RPM=15

# GitHub API 요청 간 딜레이 (ms) (기본: 100)
# GITHUB_REQUEST_DELAY=100

# ============================================
# Gemini 모델 설정
# ============================================

# Gemini 모델 선택 (기본: gemini-2.5-flash)
# 옵션: gemini-2.5-flash, gemini-2.0-flash, gemini-1.5-pro
# GEMINI_MODEL=gemini-2.5-flash

# 카테고리 기획 temperature (기본: 0.7)
# 높을수록 창의적, 낮을수록 일관성
# GEMINI_TEMPERATURE_PLANNING=0.7

# 분류 temperature (기본: 0.3)
# 분류는 일관성이 중요하므로 낮게 설정
# GEMINI_TEMPERATURE_CLASSIFY=0.3

# 카테고리 기획 max output tokens (기본: 65536)
# GEMINI_MAX_TOKENS_PLANNING=65536

# 분류 max output tokens (기본: 65536)
# GEMINI_MAX_TOKENS_CLASSIFY=65536

# ============================================
# README 설정
# ============================================

# 배치 분류 시 README 최대 길이 (기본: 10000)
# 토큰 절약이 필요하면 낮게 설정
# README_MAX_LENGTH=10000

# 단일 분류 시 README 최대 길이 (기본: 10000)
# README_MAX_LENGTH_SINGLE=10000

# ============================================
# List 설정
# ============================================

# 생성되는 List 비공개 여부 (기본: false)
# true로 설정하면 모든 List가 비공개로 생성됨
# LIST_IS_PRIVATE=false

# List 이름 최대 길이 (기본: 20, GitHub 제한)
# LIST_NAME_MAX_LENGTH=20

# ============================================
# 재시도 설정 (Retry Settings)
# ============================================

# 최대 재시도 횟수 (기본: 3)
# MAX_RETRIES=3

# 재시도 간 딜레이 (ms) (기본: 1000)
# RETRY_DELAY=1000

# ============================================
# 디버그 설정 (Debug Settings)
# ============================================

# 디버그 모드 (기본: false)
# true로 설정하면 상세 로그 출력
# DEBUG=false

# API 응답 로깅 (기본: false)
# true로 설정하면 Gemini API 응답 전체 로깅
# LOG_API_RESPONSES=false
